passenger_root <%= @node[:passenger][:root_path] %>;
passenger_ruby <%= @node[:passenger][:tune_gc]  ? "/usr/local/bin/ruby_gc_wrapper" : @node[:languages][:ruby][:ruby_bin] %>;
<% if @node[:passenger].has_key?(:max_pool_size) %>passenger_max_pool_size <%= @node[:passenger][:max_pool_size] %><% end %>
<% if @node[:passenger].has_key?(:max_instances_per_app) %>passenger_max_instances_per_app <%= @node[:passenger][:max_instances_per_app] %><% end %>
<% if @node[:passenger].has_key?(:use_global_queue) %>passenger_use_global_queue <%= @node[:passenger][:use_global_queue] %><% end %>
<% if @node[:passenger].has_key?(:rails_env) %>rails_env <%= @node[:passenger][:rails_env] %><% end %>
